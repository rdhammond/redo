<div class="row mb-1">
  <div class="col">
    <h2 class="text-center">Add New Task</h2>
  </div>
</div>
<%= form_with scope: :task, url: tasks_path, method: :post, model: task, id: "add-form" do |f| %>
  <div class="row align-items-center mb-1">
    <div class="col-xs-12 col-sm-7">
      <%= f.text_field :description, class: "form-control form-control-lg", placeholder: "Task Description" %>
    </div>
    <div class="col-xs-8 col-sm-3">
      <%= f.select :task_type, Task.task_types.keys.map {|t| [t.titleize, t]}, {}, {class: "form-control form-control-lg"} %>
    </div>
    <div class="col-xs-4 col-sm-2">
      <%= f.submit "Add", class: "btn btn-primary btn-large" %>
    </div>
  </div>
<% end %>

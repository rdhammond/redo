<div class="row">
  <div class="col">
    <h2>Change your password</h2>
  </div>
</div>
<div class="row">
  <div class="col">
    <%= form_for resource, as: resource_name, url: password_path(resource_name), method: :put do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group field">
        <%= f.label :password, "New password" %><br />
        <% if @minimum_password_length %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", aria_describedby: "minimum-password-length", class: "form-control", placeholder: "Password" %>
          <small id="minimum-password-length" class="form-text muted"><%= @minimum_password_length %> characters minimum</em>
        <% else %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Password" %>
        <% end %>
      </div>

      <div class="form-group field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "users/shared/links" %>

<div class="row">
  <div class="col">
    <h2>Resend unlock instructions</h2>
  </div>
</div>
<div class="row">
  <div class="col">
    <%= form_for resource, as: resource_name, url: unlock_path(resource_name), method: :post do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
      </div>

      <div class="actions">
        <%= f.submit "Resend unlock instructions", class: "btn btn-submit" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "users/shared/links" %>
